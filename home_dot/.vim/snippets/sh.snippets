snippet log
abbr log
	exec >/LOG-DIR/log.\`date +%Y-%m-%d\`.out 2>/LOG-DIR/log.\`date +%Y-%m-%d\`.err

snippet ulog
abbr ulog
	exec >/LOG-DIR/log.\`date +%s\`.out 2>/LOG-DIR/log.\`date +%s\`.err

snippet array_contains
abbr array_contains
	array_contains () {
		local a="\$1[@]"
		local x=\$2
		local in=1
		for e in "${!a}"; do
			if [[ "$e" == "$x" ]]; then
				in=0
				break
			fi
		done
		return $in
	}
