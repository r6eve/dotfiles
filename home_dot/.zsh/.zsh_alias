# OS{{{1
alias ag='rg'
alias swaylock='swaylock --daemonize --color=004343'
alias ls='ls -F --color=auto'
alias sl='ls -F --color=auto'
alias la='ls -AF --color=auto'
alias al='ls -AF --color=auto'
alias ll='ls -AFl --color=auto'
alias lr='ls -AFl --color=auto -tr --time-style=full-iso'
alias rl='ls -AFl --color=auto -tr --time-style=full-iso'
alias bc='bc -q'
alias di='colordiff -uw'
alias diff='colordiff'
alias gdb='gdb -quiet'
alias jobs='jobs -l'
alias ltool="java -jar $HOME/.vim/plugged/vim-grammarous/misc/LanguageTool-4.8/languagetool-commandline.jar --language en --disable 'ARROWS,COMMA_PARENTHESIS_WHITESPACE,DASH_RULE,DOUBLE_PUNCTUATION,ENGLISH_WORD_REPEAT_RULE,EN_QUOTES,EN_UNPAIRED_BRACKETS,I_LOWERCASE,MULTIPLICATION_SIGN,PLUS_MINUS,SENTENCE_WHITESPACE,THE_PUNCT,WHITESPACE_RULE,WORD_CONTAINS_UNDERSCORE,UNLIKELY_OPENING_PUNCTUATION,UPPERCASE_SENTENCE_START'"
alias parallel='parallel --no-notice'
alias q='exit'
alias time='/usr/bin/time'
alias v='nvim'
alias mnvim='/usr/bin/nvim -u ~/.min_vimrc'
alias mvim='/usr/bin/vim -u ~/.min_vimrc'
alias cad="$HOME/repos/caddy/caddy.rb -l -n -dd"
alias firefox='firefox --private-window'
alias man='LANG=en_US.UTF-8 man'

alias wine='LANG=ja_JP.UTF-8 wine'
alias winedbg='LANG=ja_JP.UTF-8 winedbg'
alias wine32='LANG=ja_JP.UTF-8 WINEARCH=win32 WINEPREFIX=~/.wine32 wine'
alias winecfg32='WINEARCH=win32 WINEPREFIX=~/.wine32 winecfg'
alias winetricks32='WINEARCH=win32 WINEPREFIX=~/.wine32 winetricks'
alias winedbg32='LANG=ja_JP.UTF-8 WINEARCH=win32 WINEPREFIX=~/.wine32 winedbg'

# C{{{1
alias gcc='gcc -std=c99 -O2 -Wall -Wextra -pedantic -Wformat=2 -Wstrict-aliasing=2'
alias splint='splint +charindex -type -compdef -usedef -retvalother -casebreak'

# C++{{{1
alias g++='g++ -std=c++11 -O2 -Wall -Wextra -pedantic -Wformat=2 -Wstrict-aliasing=2'
alias clang++='clang++ -std=c++11 -O2 -Wall -Wextra -pedantic -Wformat=2 -Wstrict-aliasing=2'

# Dot{{{1
alias dot2png='dot -Tpng -Gdpi=300'

# Java{{{1
alias jdb='rlwrap jdb'

# JavaScript{{{1
alias esa='eslint -c airbnb'

# OCaml{{{1
alias iocaml='rlwrap ocaml'
alias ocaml='ocaml -w +35'
alias ocamlopt.opt='ocamlopt.opt -w +35'

# Perl{{{1
alias iperl='perl -de0'
alias plint='perl -MO=Lint,all'

# Python{{{1
alias python='python -q'

# R{{{1
alias R='R --no-save --no-restore --no-site-file -q'
alias Rscript='Rscript --vanilla'
