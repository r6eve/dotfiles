alias ag='ag -U --hidden --ignore-dir .git --ignore-dir _build'
alias fd='fd --no-ignore-vcs'
alias i3lock='i3lock --color=54fe54'
alias ls='ls -F --color=auto'
alias sl='ls -F --color=auto'
alias la='ls -AF --color=auto'
alias al='ls -AF --color=auto'
alias ll='ls -AFl --color=auto'
alias llt='ls -AFl --color=auto --time-style=full-iso'
alias lr='ls -AFl --color=auto -tr'
alias rl='ls -AFl --color=auto -tr'
alias bc='bc -q'
alias di='colordiff -uw'
alias diff='colordiff'
alias gdb='gdb -quiet'
alias jobs='jobs -l'
alias ltool="java -jar $HOME/.vim/plugged/vim-grammarous/misc/LanguageTool-4.6/languagetool-commandline.jar --language en --disable 'ARROWS,COMMA_PARENTHESIS_WHITESPACE,DASH_RULE,DOUBLE_PUNCTUATION,ENGLISH_WORD_REPEAT_RULE,EN_QUOTES,EN_UNPAIRED_BRACKETS,I_LOWERCASE,MULTIPLICATION_SIGN,PLUS_MINUS,SENTENCE_WHITESPACE,THE_PUNCT,WHITESPACE_RULE,WORD_CONTAINS_UNDERSCORE,UNLIKELY_OPENING_PUNCTUATION,UPPERCASE_SENTENCE_START'"
alias parallel='parallel --no-notice'
alias q='exit'
alias time='/usr/bin/time'
alias v='nvim'
alias mnvim='/usr/bin/nvim -u ~/.min_vimrc'
alias mvim='/usr/bin/vim -u ~/.min_vimrc'
alias cad="$HOME/repos/caddy/caddy.rb -l -n -dd"
alias cljam="$HOME/repos/cljam-master/target/cljam"
alias samtools="$HOME/repos/samtools-master/samtools"
alias bwa="$HOME/repos/bwa-master/bwa"
alias bamtools="$HOME/repos/bamtools-master/build/src/toolkit/bamtools"
alias firefox='firefox --private-window'
# alias themis="$HOME/.vim/plugged/vim-themis/bin/themis"
# alias nclr="perl -pe 's/\x1b\x5b.*?[\x40-\x7e]//g'"
alias rga="rga --line-number"

alias -g TOSTDOUT="/tmp/tmp_for_stdout; cat /tmp/tmp_for_stdout; rm /tmp/tmp_for_stdout"

# C{{{1
alias gcc='gcc -std=c99 -O2 -Wall -Wextra -pedantic -Wformat=2 -Wstrict-aliasing=2'
alias splint='splint +charindex -type -compdef -usedef -retvalother -casebreak'

# C++{{{1
alias g++='g++ -std=c++11 -O2 -Wall -Wextra -pedantic -Wformat=2 -Wstrict-aliasing=2'
alias clang++='clang++ -std=c++11 -O2 -Wall -Wextra -pedantic -Wformat=2 -Wstrict-aliasing=2'

# Dot{{{1
alias dot2png='dot -Tpng -Gdpi=300'

# Java{{{1
alias jdb='rlwrap jdb'

# JavaScript{{{1
alias esa='eslint -c airbnb'

# OCaml{{{1
alias iocaml='rlwrap ocaml'
alias ocaml='ocaml -w +35'
alias ocamlopt.opt='ocamlopt.opt -w +35'

# Perl{{{1
alias iperl='perl -de0'
alias plint='perl -MO=Lint,all'

# R{{{1
alias R='R --no-save --no-restore --no-site-file --no-environ -q'
alias Rscript='Rscript --vanilla'

# Rust{{{1
alias clippy='rustup run nightly cargo clippy'
alias bench='rustup run nightly cargo bench'
alias cfmt='rustup run nightly cargo fmt'
